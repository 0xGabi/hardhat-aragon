{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "rootDirs": [
      ".",
      "./src",
    ],
    "esModuleInterop": true
  },
  "exclude": [
    "test",
    "dist",
    // "node_modules"
  ],
  "include": [
    "node_modules",
    "./src",
    "./"
  ]
}